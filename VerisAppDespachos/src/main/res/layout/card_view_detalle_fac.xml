<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:noHistory="true"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PickUp.CardViewPickUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >



        <android.support.v7.widget.CardView
            android:layout_width="362dp"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            android:background="@color/borderColorTv"
            app:contentPadding="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>

                <LinearLayout
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="PRODUCTO:  "
                                android:textColor="@color/azulveris"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/fac_producto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" PRODUCTO "
                                android:textSize="18sp" />
                            <!-- -->

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/azulveris"
                                android:text="CANTIDAD: "
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/fac_cantidad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" CANTIDAD "
                                android:textSize="18sp" />
                            <!-- -->

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/azulveris"
                                android:text="TOTAL: "
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/fac_total"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TOTAL"
                                android:textSize="18sp" />


                    </LinearLayout>



            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>